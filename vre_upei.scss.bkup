 /*=====================================
 =            utilities            =
 =====================================*/
@mixin shadow-box($padding: 4px) {
  padding: $padding;
  background: #fff;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26);
}

@mixin border-box($padding: 4px) {
  border: 1px solid #ccc;
  padding: $padding;
  background: #fff;
  border-radius: 4px;
}
.frame-image {
  border: 1px solid #ccc;
  padding: 4px;
  background: #fff;
  border-radius: 4px;
}

 /*-----  End of utilities  ------*/

dt, #tasks {
  font-style: italic;
}



