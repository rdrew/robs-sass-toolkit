/*==========  search box when in header block  ==========*/

//height of the search region
#secondary-content-wrapper {
  .texture-overlay {
    padding: 6px;
    @include breakpoint(800px) {
   padding: 40px 0 15px; 
    }
    .region-secondary-content {
      margin:0;
    }
  }
}

div#block-islandora-solr-simple {
	margin: 0;
}

.search-bar form {
    width: 100%;
        margin: 0px auto;
	text-align: center;
}

//input
.search-bar input[type="text"] {
  padding: 12px 15px;
  background: rgba(50, 50, 50, 0.2);
  border: 0px solid #dbdbdb;
  border-radius: 4px 0 0 4px;
  @include breakpoint(400px) {
  width: 250px;
  }
}

.search-bar input[type="submit"] {
  border-radius: 0;
  position: relative;
  padding: 10px 20px;
  left: -5px;
  border: 2px solid #8B1F03;
  background: #8F270C;
  color: #fafafa;
  border-radius: 0 4px 4px 0;
  /*text replace*/
  text-indent: -119988px;
  overflow: hidden;
  text-align: left;
  text-transform: capitalize;
  background-image: url("../images/search-icon.png");
  background-repeat: no-repeat;
  background-position: 50% 50%;
  background-size: 18px;
  /*end text replace*/
  &:hover {
    color: #8B1F03;
    background-color: $green;
    border-color: $green;
  }
}

/*==========  menu bar  ==========*/
nav#block-system-main-menu .menu a {
    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
    font-size: 1.3em;
      /*padding: 0.4em 1em;*/
    line-height:12px;
    }

div#menu-wrapper {
  border-radius: 4px;
  padding-left: 5px;
  min-height: inherit;
  background: rgb(51, 51, 51);
  top: 2em;
}

nav#block-system-main-menu .menu a {
      text-transform: none;
    }

#menu-bar {
  display: none;
  @include breakpoint(800px) {
    display: block;
  border-radius: 4px;
  a.active {
    color: rgb(247, 183, 81);
  }
  }
}

.responsive-menus.responsified span.toggler {
    box-shadow: none;
}

.responsive-menus.responsified .responsive-menus-simple {
    box-shadow: none;
}
 /*-----  End of header stuff  ------*/



